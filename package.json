{
  "name": "vl-ui-http-error-message",
  "version": "1.0.0",
  "description": "Toont een HTTP foutmelding aan de gebruiker op een gebruiksvriendelijke manier.",
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "pretest": "npm install chromedriver --chromedriver-force-download",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "wct --config-file ./wct.local.conf.json",
    "test:e2e": "npm run test:server:start && npm run test:e2e:chrome && npm run test:e2e:firefox",
    "test:e2e:grid": "npm run test:server:start && npm run test:e2e:chrome:grid && npm run test:e2e:firefox:grid",
    "test:grid": "wct --config-file ./wct.docker.conf.json && npm run test:e2e:grid",
    "posttest:e2e": "pkill -f http-server",
    "test:e2e:chrome": "mocha --chrome ",
    "test:e2e:chrome:grid": "mocha  --chrome --grid",
    "test:e2e:firefox": "mocha --firefox",
    "test:e2e:firefox:grid": "mocha --firefox --grid",
    "test:e2e:opera": "mocha --opera",
    "test:e2e:safari": "mocha --safari",
    "test:server:start": "http-server &",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "minify *.src.js > vl-http-error-message.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-proza-message/style.css' vl-http-error-message.js",
    "release:prepare:commit": "git add -f vl-http-error-message.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-http-error-message.git"
  },
  "author": "DIDM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-ui-http-error-message/issues"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-http-error-message#readme",
  "dependencies": {
    "vl-ui-button": "^2.0.0",
    "vl-ui-core": "^3.0.1",
    "vl-ui-grid": "^1.1.0",
    "vl-ui-titles": "^1.0.13",
    "vl-ui-typography": "^1.0.4"
  },
  "peerDependencies": {
    "vl-ui-core": "^3.0.1",
    "vl-ui-grid": "^1.1.0",
    "vl-ui-titles": "^1.0.13",
    "vl-ui-typography": "^1.0.2",
    "vl-ui-button": "^2.0.0"
  },
  "devDependencies": {
    "@govflanders/vl-ui-util": "^3.9.1",
    "http-server": "0.11.1",
    "np": "3.0.4",
    "replace": "^1.1.1",
    "uglify-js-es6": "2.8.9",
    "vl-ui-util": "^3.2.5",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  }
}
